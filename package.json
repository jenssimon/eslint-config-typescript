{
  "name": "@jenssimon/eslint-config-typescript",
  "version": "0.0.0-development",
  "description": "ESLint configuration for usage with TypeScript",
  "main": "index.js",
  "author": "Jens Simon <https://github.com/jenssimon>",
  "keywords": [
    "eslint",
    "eslintconfig",
    "typescript"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/jenssimon/eslint-config-typescript"
  },
  "license": "MIT",
  "files": [
    "/index.js"
  ],
  "scripts": {
    "lint": "eslint --ext .js,.ts,.cjs,.mjs,.cts,.mts ./",
    "commit": "cz",
    "postinstall": "husky install",
    "prepack": "pinst --disable",
    "postpack": "pinst --enable",
    "semantic-release": "semantic-release"
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^6.3.0",
    "@typescript-eslint/parser": "^6.3.0",
    "eslint-plugin-deprecation": "^2.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.0.0",
    "@commitlint/config-conventional": "^18.0.0",
    "@jenssimon/eslint-config-base": "^7.3.0",
    "@types/node": "^18.18.5",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.51.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.0.1",
    "npm-run-all": "^4.1.5",
    "pinst": "^3.0.0",
    "semantic-release": "^22.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "peerDependencies": {
    "eslint": "^7.0.0 || ^8.0.0",
    "typescript": ">=4.0.0"
  },
  "eslintConfig": {
    "extends": [
      "@jenssimon/base"
    ],
    "rules": {
      "unicorn/prefer-module": "off"
    }
  },
  "lint-staged": {
    "**/*.{js,ts}": "eslint"
  },
  "packageManager": "yarn@3.6.4",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "release": {
    "branches": [
      "main"
    ]
  }
}
