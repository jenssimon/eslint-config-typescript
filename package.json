{
  "name": "@jenssimon/eslint-config-typescript",
  "version": "0.0.0-development",
  "description": "ESLint configuration for usage with TypeScript",
  "main": "index.js",
  "author": "Jens Simon <https://github.com/jenssimon>",
  "keywords": [
    "eslint",
    "eslintconfig",
    "typescript"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/jenssimon/eslint-config-typescript"
  },
  "license": "MIT",
  "files": [
    "/index.js"
  ],
  "scripts": {
    "lint": "eslint --fix --ext .js,.ts,.cjs,.mjs,.cts,.mts ./",
    "ci-test": "run-s \"ci-test:*\"",
    "ci-test:lint": "eslint ./",
    "commit": "cz",
    "postinstall": "husky install",
    "prepack": "pinst --disable",
    "postpack": "pinst --enable",
    "semantic-release": "semantic-release"
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "6.1.0",
    "@typescript-eslint/parser": "6.1.0",
    "eslint-plugin-deprecation": "1.4.1"
  },
  "devDependencies": {
    "@commitlint/cli": "17.6.6",
    "@commitlint/config-conventional": "17.6.6",
    "@jenssimon/eslint-config-base": "7.0.3",
    "@types/node": "18.16.19",
    "commitizen": "4.3.0",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "8.45.0",
    "husky": "8.0.3",
    "lint-staged": "13.2.3",
    "npm-run-all": "4.1.5",
    "pinst": "3.0.0",
    "semantic-release": "21.0.7",
    "ts-node": "10.9.1",
    "typescript": "5.1.6"
  },
  "peerDependencies": {
    "eslint": "^7.0.0 || ^8.0.0",
    "typescript": ">=4.0.0"
  },
  "eslintConfig": {
    "extends": [
      "@jenssimon/base"
    ],
    "rules": {
      "unicorn/prefer-module": "off"
    }
  },
  "lint-staged": {
    "**/*.{js,ts}": "eslint"
  },
  "packageManager": "yarn@3.6.1",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "release": {
    "branches": [
      "main"
    ]
  }
}
