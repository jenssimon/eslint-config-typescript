{
  "name": "@jenssimon/eslint-config-typescript",
  "version": "0.0.0-development",
  "description": "ESLint configuration for usage with TypeScript",
  "main": "index.js",
  "author": "Jens Simon <https://github.com/jenssimon>",
  "keywords": [
    "eslint",
    "eslintconfig",
    "typescript"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/jenssimon/eslint-config-typescript"
  },
  "license": "MIT",
  "files": [
    "/index.js"
  ],
  "scripts": {
    "lint": "eslint ./",
    "commit": "cz",
    "prepack": "pinst --disable",
    "postpack": "pinst --enable",
    "semantic-release": "semantic-release"
  },
  "dependencies": {
    "@stylistic/eslint-plugin-ts": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint-plugin-deprecation": "^3.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.0.0",
    "@commitlint/config-conventional": "^19.0.0",
    "@eslint/eslintrc": "^3.2.0",
    "@jenssimon/eslint-config-base": "^9.0.0",
    "@types/node": "^22.0.0",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.18.0",
    "husky": "^9.0.0",
    "lint-staged": "^16.0.0",
    "npm-run-all2": "^8.0.0",
    "pinst": "^3.0.0",
    "semantic-release": "^24.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "peerDependencies": {
    "eslint": "^7.0.0 || ^8.0.0",
    "typescript": ">=4.0.0"
  },
  "packageManager": "yarn@4.9.4",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "release": {
    "branches": [
      "main"
    ]
  }
}
