{
  "name": "@jenssimon/eslint-config-typescript",
  "version": "0.0.0-development",
  "description": "ESLint configuration for usage with TypeScript",
  "main": "index.js",
  "author": "Jens Simon <https://github.com/jenssimon>",
  "keywords": [
    "eslint",
    "eslintconfig",
    "typescript"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/jenssimon/eslint-config-typescript"
  },
  "license": "MIT",
  "scripts": {
    "lint": "eslint --fix ./",
    "ci-test": "run-s \"ci-test:*\"",
    "ci-test:lint": "eslint ./",
    "commit": "cz",
    "postinstall": "husky install",
    "prepack": "pinst --disable",
    "postpack": "pinst --enable",
    "semantic-release": "semantic-release"
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^5.26.0",
    "@typescript-eslint/parser": "^5.26.0",
    "eslint-plugin-deprecation": "^1.3.2"
  },
  "devDependencies": {
    "@commitlint/cli": "17.0.0",
    "@commitlint/config-conventional": "17.0.0",
    "@jenssimon/eslint-config-base": "5.4.1",
    "commitizen": "4.2.4",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "8.16.0",
    "husky": "8.0.1",
    "npm-run-all": "4.1.5",
    "pinst": "3.0.0",
    "semantic-release": "19.0.2",
    "typescript": "4.6.4"
  },
  "peerDependencies": {
    "eslint": "^7.0.0 || ^8.0.0",
    "typescript": ">=4.0.0"
  },
  "eslintConfig": {
    "extends": [
      "@jenssimon/base"
    ]
  },
  "packageManager": "yarn@3.2.1",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
