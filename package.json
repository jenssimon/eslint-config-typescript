{
  "name": "@jenssimon/eslint-config-typescript",
  "version": "0.0.0-development",
  "description": "ESLint configuration for usage with TypeScript",
  "main": "index.js",
  "author": "Jens Simon <https://github.com/jenssimon>",
  "keywords": [
    "eslint",
    "eslintconfig",
    "typescript"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/jenssimon/eslint-config-typescript"
  },
  "license": "MIT",
  "files": [
    "/index.js"
  ],
  "scripts": {
    "lint": "eslint ./",
    "commit": "cz",
    "prepack": "pinst --disable",
    "postpack": "pinst --enable",
    "semantic-release": "semantic-release"
  },
  "dependencies": {
    "@stylistic/eslint-plugin-ts": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint-plugin-deprecation": "^3.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.0.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint-community/eslint-plugin-eslint-comments": "^4.5.0",
    "@eslint/compat": "^1.4.1",
    "@eslint/js": "^9.39.0",
    "@jenssimon/eslint-config-base": "^10.0.0",
    "@stylistic/eslint-plugin": "^5.5.0",
    "@types/node": "^24.0.0",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.39.0",
    "eslint-config-airbnb-extended": "^2.3.2",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import-esm": "^3.0.1",
    "eslint-plugin-import-x": "^4.16.1",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-sonarjs": "^3.0.5",
    "eslint-plugin-unicorn": "^62.0.0",
    "globals": "^16.4.0",
    "husky": "^9.0.0",
    "lint-staged": "^16.0.0",
    "npm-run-all2": "^8.0.0",
    "pinst": "^3.0.0",
    "semantic-release": "^25.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "peerDependencies": {
    "eslint": "^7.0.0 || ^8.0.0",
    "typescript": ">=4.0.0"
  },
  "packageManager": "yarn@4.10.3",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "release": {
    "branches": [
      "main"
    ]
  }
}
